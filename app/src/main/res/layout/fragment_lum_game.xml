<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gor"
    tools:context=".LumGameFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="549dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/lum_score"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="504dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/broke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineSlot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/fuzzybubblesbold"
        android:gravity="center"
        android:text="37500"
        android:textColor="#E6E6E2"
        android:textSize="31sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSlot1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_1" />

            <ImageView
                android:id="@+id/ivSlot2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_2" />

            <ImageView
                android:id="@+id/ivSlot3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_3" />

            <ImageView
                android:id="@+id/ivSlot4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_marginRight="35dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_4" />

            <ImageView
                android:id="@+id/ivSlot5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_marginRight="35dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSlot6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_6" />

            <ImageView
                android:id="@+id/ivSlot7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_8" />

            <ImageView
                android:id="@+id/ivSlot8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_10" />

            <ImageView
                android:id="@+id/ivSlot9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_marginRight="35dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_7" />

            <ImageView
                android:id="@+id/ivSlot10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_marginRight="35dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSlot11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_1" />

            <ImageView
                android:id="@+id/ivSlot12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_9" />

            <ImageView
                android:id="@+id/ivSlot13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_7" />

            <ImageView
                android:id="@+id/ivSlot14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_6" />

            <ImageView
                android:id="@+id/ivSlot15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal|center"
                android:layout_margin="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/lum_3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineSlot"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:rotation="90"
            android:src="@drawable/left_arrow" />

        <ImageView
            android:id="@+id/ivBet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/lum_bet" />

        <ImageView
            android:id="@+id/ivDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:rotation="90"
            android:src="@drawable/right_arrow" />

    </LinearLayout>

    <Button
        android:id="@+id/bSpin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/lum_spin"
        android:fontFamily="@font/fuzzybubblesregular"
        android:textColor="#E6E6E2"
        android:textAllCaps="false"
        android:textSize="34sp"
        android:text="Spin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineSlot"
        app:layout_constraintTop_toTopOf="@+id/guidelineMenu" />

    <TextView
        android:id="@+id/tvBetValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/fuzzybubblesbold"
        android:textColor="#E6E6E2"
        android:textSize="31sp"
        android:text="250"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMenu"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/guidelineSlot"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>